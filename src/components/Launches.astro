---
import { getLaunches } from "../services/spacex";
import CardLaunch from "./CardLaunch.astro";

const launches = await getLaunches();
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 px-6">
    {launches.map(({id, name, links, date_utc, success, flight_number, details}) => (
        <CardLaunch
            id={id}
            name={name}
            img={links.patch.small}
            date={new Date(date_utc)}
            success={success}
            flightNumber={flight_number}
            details={details}
        />
    ))}
</div>